<widgets>
    <megamenu_links_widget type="creatuity_megamenu/widgets_links">
        <name>Megamenu Links</name>
        <description type="desc">Adds Mega-Menu Subcategories Links</description>
        <parameters>
            <scope_type translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>numeric</value>
                <label>Parameters Type</label>
                <type>select</type>
                <values>
                    <numeric translate="label">
                        <value>numeric</value>
                        <label>Numeric</label>
                    </numeric>
                    <percent translate="label">
                        <value>percent</value>
                        <label>Percentage</label>
                    </percent>
                </values>
            </scope_type>
            
            <from_numeric translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>1</value>
                <label>From</label>
                <description>'1' means first subcategory. '2' means second category. And so on.</description>
                <validate>required-entry validate-number validate-greater-than-zero</validate>
                <type>text</type>
                <depends>
                    <scope_type>
                        <value>numeric</value>
                    </scope_type>
                </depends>
            </from_numeric>
            
            <to_numeric translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>-1</value>
                <label>To</label>
                <description>'1' means first subcategory. '2' means second category. And so on. '-1' means last category.  ('To' must be less than 'from') </description>
                <validate>required-entry validate-number</validate>
                <type>text</type>
                <depends>
                    <scope_type>
                        <value>numeric</value>
                    </scope_type>
                </depends>
            </to_numeric>
            
            <from_percent translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>0</value>
                <label>From</label>
                <description>'0' means first subcategory. '50' means middle category. '100' means last category.</description>
                <validate>required-entry validate-number validate-greater-than-zero</validate>
                <type>text</type>
                <depends>
                    <scope_type>
                        <value>percent</value>
                    </scope_type>
                </depends>
            </from_percent>
            
            <to_percent translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>100</value>
                <label>To</label>
                <description>'0' means first subcategory. '50' means middle category. '100' means last category. ('To' must be less than 'from') </description>
                <validate>required-entry validate-number validate-percents</validate>
                <type>text</type>
                <depends>
                    <scope_type>
                        <value>percent</value>
                    </scope_type>
                </depends>
            </to_percent>
            
            
        </parameters>
    </megamenu_links_widget>
    
